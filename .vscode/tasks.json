{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Compile TypeScript",
			"type": "typescript",
			"tsconfig": "tsconfig.json",
			"problemMatcher": "$tsc",
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"presentation": {
				"reveal": "always"
			}
		},
		{
			"label": "Build and Copy Templates",
			"type": "shell",
			"command": "npm",
			"args": ["run", "build"],
			"group": "build",
			"problemMatcher": "$tsc",
			"presentation": {
				"reveal": "always"
			},
			"dependsOrder": "sequence"
		}
	]
}
