{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Run and Debug TypeScript",
      "type": "node",
      "request": "launch",
      "preLaunchTask": "Build and Copy Templates",
      "program": "${file}",
      "outFiles": [
        "${workspaceFolder}/**/*.js"
      ],
      "skipFiles": [
        "<node_internals>/**"
      ],
      "sourceMaps": true,
      "smartStep": true,
      "internalConsoleOptions": "openOnSessionStart",
      "resolveSourceMapLocations": [
        "${workspaceFolder}/**",
        "!**/node_modules/**"
      ]      
    }
  ]
}